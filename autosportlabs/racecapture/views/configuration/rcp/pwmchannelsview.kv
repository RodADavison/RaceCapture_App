#:kivy 1.10.0

<AnalogPulseOutputChannel>:
    BoxLayout:
    	spacing: dp(5)
        orientation: 'horizontal'
        BoxLayout: 
            spacing: dp(5)
            orientation: 'vertical'
            HSeparator:
                text: 'Configuration'
            ChannelNameSelectorView:
            	id: chan_id
            	channel_type: 4
                size_hint:[1.0, 0.25]
            SampleRateSelectorView:
                id: sr
                size_hint:[1.0, 0.25]
            BoxLayout:
                size_hint:[1.0, 0.25]
                orientation: 'horizontal'
                spacing: dp(5)
                FieldLabel:
                    text: 'Output Mode'
                    halign: 'right'
                PwmOutputModeSpinner:
                	rcid: 'outputMode'
                	on_text: root.on_output_mode(*args)
            BoxLayout:
                size_hint:[1.0, 0.25]
                spacing: dp(5)
                orientation: 'horizontal'
                FieldLabel:
                    text: 'Logging Mode'
                    halign: 'right'
                PwmLoggingModeSpinner:
                	rcid: 'loggingMode'
                	on_text: root.on_logging_mode(*args)
                    
        BoxLayout:
            spacing: dp(5)
            orientation: 'vertical'
            HSeparator:
                text: 'Startup Options'
            BoxLayout:
            	size_hint: (1.0, 0.2)
                spacing: dp(5)
                orientation: 'horizontal'
                FieldLabel:
                    text: 'Duty Cycle (0-100%)'
                    font_size: sp(17)                    
                    halign: 'right'
                IntegerValueField:
                	rcid: 'dutyCycle'
                	on_text: root.on_startup_duty_cycle(*args)
            BoxLayout:
            	size_hint: (1.0, 0.2)
                spacing: dp(5)
                orientation: 'horizontal'
                FieldLabel:
                    text: 'Period (0-2000)'
                    font_size: sp(17)
                    halign: 'right'
                IntegerValueField:
                	rcid: 'period'
                	on_text: root.on_startup_period(*args)
            Label:
                size_hint: (1.0, 0.6)


<AnalogPulseOutputChannelsView>:
