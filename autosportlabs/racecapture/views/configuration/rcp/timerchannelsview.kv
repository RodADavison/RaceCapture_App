#:kivy 1.10.0

<PulsePerRevSpinner>:

<PulseChannelsView>:

<PulseChannel>:
    BoxLayout:
        orientation: 'horizontal'
        spacing: dp(5)
        BoxLayout: 
            spacing: dp(5)
            orientation: 'vertical'
            HSeparator:
                text: 'Configuration'
            ChannelNameSelectorView:
                id: chan_id
            	channel_type: 2
            SampleRateSelectorView:
                id: sr
            Label:
                size_hint: (None, 1.0)
        BoxLayout:
            spacing: dp(5)
            orientation: 'vertical'
            HSeparator:
                text: 'Options'
            BoxLayout:
                spacing: dp(5)
                orientation: 'horizontal'
                FieldLabel:
                    text: 'Channel Mode'
                    halign: 'right'
                TimerModeSpinner:
                	rcid: 'mode'
                	on_text: root.on_mode(*args)
            BoxLayout:
                spacing: dp(5)
                orientation: 'horizontal'
                FieldLabel:
                    text: 'Timer Speed'
                    halign: 'right'
                TimerSpeedSpinner:
                	rcid: 'speed'
                	on_text: root.on_speed(*args)
            BoxLayout:
                spacing: dp(5)
                orientation: 'horizontal'
                FieldLabel:
                    text: 'Pulse per Revolution'
                    halign: 'right'
                PulsePerRevSpinner:
                	rcid: 'ppr'
                	on_text: root.on_pulse_per_rev(*args)
